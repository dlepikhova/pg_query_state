+++ b/src/backend/tcop/postgres.c
@@ -3053,6 +3053,8 @@ ProcessInterrupts(void)
 
 	if (ParallelMessagePending)
 		HandleParallelMessages();
+
+	CheckAndHandleCustomSignals();
 }
 
 
